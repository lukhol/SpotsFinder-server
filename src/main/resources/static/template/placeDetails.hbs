<div class="panel panel-primary" style="color: black;">
	<div class="panel-heading">
		<h2>
			<span class="label label-success">
				{{name}}
			</span>
		</h2>
	</div>
	
	<div class="panel-body">
		<div class="row">
			<div class="col-sm-6"> 
				<div class="col-sm-11 col-sm-offset-1"> 
					<div class="panel-inner panel-default col-sm-11 border rounded">
						<div class="panel-heading">Description</div>
						<div class="panel-body text-justify">{{description}}</div>
					</div>
				</div>
			</div>
			
			<div class="col-sm-6">
				<div class="panel-inner panel-default col-sm-11 border rounded">
					<div class="panel-heading">Obstacles</div>
					<div class="panel-body text-justify">TODO</div>
				</div>
			</div>
		</div>
		
		<div class="row text-center text-lg-left">
		{{#each images}}
			<div class="col-lg-2 col-md-4 col-xs-6">
	            <img class="small-place-img img-fluid img-thumbnail" src="data:image/jpg;base64, {{image}}" alt="">
			</div>
		{{/each}}
		</div>
		<div class="row">
			<div class="col-lg-12">
				<img id="bigImagePlaceDetails" class="img-responsive img-thumbnail" style="margin: 5px;" src="">
			</div>
		</div>
	</div>
</div>